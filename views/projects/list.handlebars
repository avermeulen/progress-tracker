<div class="row">
    <h1>Projects</h1>

    <a href="/projects/add" class="btn btn-success">Add project</a>

    <table class="table">
        <tr>
            <th>
                Project name
            </th>
            <th>
                Repo name
            </th>
            <th>
                Actions
            </th>

        </tr>
        {{#projects}}
            <tr>
                <td>
                    {{projectName}}
                </td>
                <td>
                    {{repoName}}
                </td>
                <td>
                    <a class="btn btn-warning" href="/projects/edit/{{_id}}">Edit</a>
                </td>
            </tr>
        {{/projects}}
    </table>

</div>
