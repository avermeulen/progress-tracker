<h1>Tracking setup</h1>

<div class="row">

    <form class="form-horizontal" action="/track" method="post">
      <div class="form-group">
        <label for="projectId" class="col-sm-1 control-label">Project</label>
        <div class="col-sm-4">
          <select class="form-control" name="project_name">
              {{#projects}}
              <option value="{{repoName}}">{{projectName}}</option>
              {{/projects}}
            </select>
        </div>

      </div>
      <div class="form-group">
        <label for="inputPassword3" class="col-sm-1 control-label">Group</label>
        <div class="col-sm-4">
            <select class="form-control" name="group_id">
                {{#userGroups}}
                    <option value="{{_id}}">{{name}}</option>
                {{/userGroups}}
              </select>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-4">
          <button type="submit" class="btn btn-default">Track</button>
        </div>
      </div>
    </form>

</div>
